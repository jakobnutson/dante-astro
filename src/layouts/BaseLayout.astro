---
import { ViewTransitions } from 'astro:transitions';
import BaseHead, { type Props as HeadProps } from '/dante-astro/components/BaseHead.astro';
import Footer from '/dante-astro/components/Footer.astro';
import Header from '/dante-astro/components/Header.astro';
import Nav from '/dante-astro/components/Nav.astro';
import Card from '/dante-astro/components/Card.astro';




export type Props = HeadProps & { showHeader?: boolean };

const { showHeader = true, ...head } = Astro.props;
---
<!doctype html>
<html lang="en" class="antialiased break-words">

    <head>

        <Nav />
        <BaseHead {...head} />
        <script>
            if (localStorage.theme === 'dark') {
                document.documentElement.classList.add('dark');
            }
        </script>
        
        <ViewTransitions />
    </head>
    
    <body class="bg-main text-main">
       
        
        
        <div class=" flex flex-col min-h-screen px-4 md:px-8">
            
            
            {showHeader && <Header />}
            <main class="grow w-full max-w-3xl mx-auto">
                
                <slot />
            </main>
            
            <Footer />
        </div>
    </body>
</html>
